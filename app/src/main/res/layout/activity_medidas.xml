<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.eti.softlog.qualitasbovino.AnimalNovoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição"
                android:inputType="textCapCharacters" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_abrev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_abrev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Abreviação"
                android:inputType="textCapCharacters" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:text="Sexo"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

        <RadioGroup
            android:id="@+id/rd_sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp">

            <RadioButton
                android:id="@+id/opt_macho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Macho" />

            <RadioButton
                android:id="@+id/opt_femea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fêmea" />

        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_menor_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_menor_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Menor Valor"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_maior_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_maior_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Maior Valor"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_restricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_restricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Restrição"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_descarte1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_descarte1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descarte 1"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_descarte2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_descarte2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descarte 2"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_descarte3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_descarte3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descarte 3"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtlayout_descarte4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_descarte4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descarte 4"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_gravar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:text="Gravar" />

    </LinearLayout>
</ScrollView>
